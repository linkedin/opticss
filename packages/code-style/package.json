{
  "name": "@opticss/code-style",
  "author": "Chris Eppstein",
  "description": "Configuration and tools to manage the code style of css-blocks.",
  "license": "BSD-2-Clause",
  "version": "0.2.0",
  "main": "configs/tslint.interactive.json",
  "readme": "README.md",
  "keywords": [
    "tslint",
    "tslint-plugin"
  ],
  "types": "dist",
  "scripts": {
    "compile": "rm -rf dist && tsc",
    "pretest": "yarn run compile",
    "test": "tslint --test test/rules/*/*",
    "posttest": "yarn run lint",
    "lint": "tslint -t msbuild -p . -c tslint.cli.json",
    "lintall": "tslint -t msbuild -p . -c tslint.release.json",
    "lintfix": "tslint -t msbuild -p . --fix -c tslint.cli.json",
    "prepublish": "yarn run compile && yarn run lintall"
  },
  "bugs": {
    "url": "https://github.com/css-blocks/css-blocks/issues"
  },
  "repository": {
    "url": "https://github.com/css-blocks/css-blocks.git",
    "type": "git"
  },
  "homepage": "https://github.com/css-blocks/css-blocks/tree/master/packages/code-style",
  "engines": {
    "node": ">=8.0.0"
  },
  "peerDependencies": {
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "files": [
    "dist",
    "configs",
    "*.md",
    "test"
  ]
}
