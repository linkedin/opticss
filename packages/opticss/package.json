{
  "name": "opticss",
  "version": "0.2.0",
  "description": "A CSS Optimizer",
  "main": "dist/src/index.js",
  "scripts": {
    "compile": "rm -rf dist && tsc",
    "pretest": "npm run compile",
    "posttest": "yarn run lint",
    "prepublish": "yarn run compile && yarn run lintall",
    "lint": "tslint -t msbuild --project tsconfig.json -c tslint.cli.json",
    "lintall": "tslint -t msbuild --project tsconfig.json -c tslint.release.json",
    "lintfix": "tslint -t msbuild --project tsconfig.json -c tslint.cli.json --fix",
    "test": "mocha dist/test/**/*.js --opts test/mocha.opts -i --grep Integration",
    "integration": "npm run pretest && mocha dist/test --opts test/mocha.opts --grep Integration",
    "coverage": "istanbul cover -i \"dist/src/**/*.js\" --dir ./build/coverage node_modules/.bin/_mocha -- dist/test --opts test/mocha.opts",
    "remap": "remap-istanbul -i build/coverage/coverage.json -o coverage -t html",
    "docs": "typedoc --out ./docs ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/css-blocks/opticss.git"
  },
  "keywords": [
    "css",
    "optimizer"
  ],
  "author": "Chris Eppstein",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/css-blocks/opticss/issues"
  },
  "types": "dist/src/index.d.ts",
  "homepage": "https://github.com/css-blocks/opticss#readme",
  "engines": {
    "node": ">=8.0.0"
  },
  "devDependencies": {
    "@opticss/simple-template": "^0.2.0",
    "@opticss/code-style": "^0.2.0",
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.43",
    "@types/node": "8.x.x - 9.x.x",
    "@types/random-js": "^1.0.30",
    "chai": "^3.5.0",
    "css-size": "^4.0.0-rc.4",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "mocha-typescript": "^1.0.23",
    "parse5": "^3.0.2",
    "random-js": "^1.0.8",
    "remap-istanbul": "^0.9.5",
    "resolve-cascade": "^0.1.1",
    "source-map-support": "^0.4.17",
    "tslint": "^5.1.0",
    "typedoc": "^0.7.1",
    "typescript": "^2.7.1"
  },
  "dependencies": {
    "@opticss/element-analysis": "^0.2.0",
    "@opticss/template-api": "^0.2.0",
    "@opticss/util": "^0.1.1",
    "@types/debug": "0.0.29",
    "concat-with-sourcemaps": "^1.0.4",
    "css-property-parser": "^1.0.5",
    "debug": "^2.6.8",
    "object.values": "^1.0.4",
    "postcss": "^6.0.12",
    "postcss-selector-parser": "^3.1.1",
    "source-map": "^0.6.1",
    "specificity": "^0.3.2",
    "typescript-collections": "^1.2.5",
    "typescript-memoize": "^1.0.0-alpha.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "engineStrict": true
}
